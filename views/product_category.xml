<odoo>
    <data>
        <record id="miraity_customization_inherit_product_category" model="ir.ui.view">
            <field name="name">product.category</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">

                <xpath expr="//group[@name='first']" position="inside">
                    <field name="active"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <group>
                        <group>
                            <label for="short_name" string="Short name"/>
                            <span>
                                <field name="short_name" placeholder="Aa"/>
                            </span>
                            <field name="product_count" invisible="0"/>
                        </group>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>